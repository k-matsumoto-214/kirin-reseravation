<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kirin.reservation.repository.mapper.ReservationDateMapper">

    <resultMap id="reservationDateDto" type="com.kirin.reservation.repository.entity.ReservationDateDto">
      <id property="id" column="ID"/>
      <result property="name" column="NAME" />
      <result property="date" column="DATE" />
    </resultMap>

    <select id="findByReservationDate" resultMap="reservationDateDto">
        SELECT ID, NAME, DATE FROM RESERVATION_DATE WHERE DATE = #{reservationDate}
    </select>

</mapper>